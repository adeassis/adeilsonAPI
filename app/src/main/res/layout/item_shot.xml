<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_shot"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_shot_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/ic_nophoto" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shot_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"/>

            <TextView
                android:id="@+id/item_shot_viewcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view_count"/>

            <TextView
                android:id="@+id/item_shot_createdat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="created_at"/>

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>